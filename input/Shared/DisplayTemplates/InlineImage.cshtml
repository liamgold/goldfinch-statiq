@model Kentico.Kontent.Delivery.Abstractions.IInlineImage

<figure class="figure">
    <img src="@Model.Url?fm=png&auto=format&lossless=1" class="figure__image" alt="@Model.Description" loading="lazy">

    @if (!string.IsNullOrWhiteSpace(Model.Description))
    {
        <figcaption class="figure__caption">@Model.Description</figcaption>
    }
</figure>