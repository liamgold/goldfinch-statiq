@model Goldfinch.Models.ViewModels.HomeViewModel;

@{
    ViewBag.Title = Model.Home.SeoMetaTitle;
    ViewBag.Canonical = string.IsNullOrWhiteSpace(Model.Home.SeoCanonicalUrl) ? Model.CurrentUrl : Model.Home.SeoCanonicalUrl;
    ViewData["SeoData"] = Model.SeoData;
}

<div>
    <h1 class="text-center">@Model.Home.BaseTitle</h1>
    <div>
        @Html.DisplayFor(vm => vm.Home.BodyCopy)
    </div>
</div>