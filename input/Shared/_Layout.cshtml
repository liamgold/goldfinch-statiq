@using Statiq.Common

@{
    var seoData = ViewBag.SeoData as SeoData;
}

<!DOCTYPE html>
<html lang="en" data-theme="light">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#444444">
    <title>@ViewBag.Title · Liam Goldfinch</title>
    <link rel="stylesheet" href="@IExecutionContext.Current.GetLink("/assets/styles/global.css")" />
    <link rel="preload" href="@IExecutionContext.Current.GetLink("/assets/fonts/roboto-v27-latin-regular.woff2")" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="@IExecutionContext.Current.GetLink("/assets/fonts/open-sans-v18-latin-regular.woff2")" as="font" type="font/woff2" crossorigin>
    [ComponentStyles]
    <link rel="sitemap" type="application/xml" href="/sitemap.xml">
    <partial name="_Favicons" />
    <partial name="_Seo" model="seoData" />
    <partial name="_Canonical" />
    <script type="text/javascript">
        const currentTheme = localStorage.getItem('theme') ? localStorage.getItem('theme') : null;
        if (currentTheme) {
            document.documentElement.setAttribute('data-theme', currentTheme);
        } else {
            localStorage.setItem('theme', 'light');
        }
    </script>
    <javascript file="dark-mode" />
</head>

<body>
    <partial name="_Header" />
    <main>
        @RenderBody()
    </main>
    <partial name="_Footer" />
</body>

</html>