@using Statiq.Common

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#444444">
    <title>@ViewBag.Title · Liam Goldfinch</title>
    <link rel="stylesheet" href="@IExecutionContext.Current.GetLink("/assets/styles/global.css")" />
    <link rel="preload" href="@IExecutionContext.Current.GetLink("/assets/fonts/roboto-v27-latin-regular.woff2")" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="@IExecutionContext.Current.GetLink("/assets/fonts/open-sans-v18-latin-regular.woff2")" as="font" type="font/woff2" crossorigin>
    [ComponentStyles]
    <link rel="icon" href="@IExecutionContext.Current.GetLink("/assets/images/favicon-32x32.png")" type="image/png">
    <link rel="apple-touch-icon" sizes="48x48" href="@IExecutionContext.Current.GetLink("/assets/images/icon-48x48.png")">
    <link rel="apple-touch-icon" sizes="72x72" href="@IExecutionContext.Current.GetLink("/assets/images/icon-72x72.png")">
    <link rel="apple-touch-icon" sizes="96x96" href="@IExecutionContext.Current.GetLink("/assets/images/icon-96x96.png")">
    <link rel="apple-touch-icon" sizes="144x144" href="@IExecutionContext.Current.GetLink("/assets/images//icon-144x144.png")">
    <link rel="apple-touch-icon" sizes="192x192" href="@IExecutionContext.Current.GetLink("/assets/images//icon-192x192.png")">
    <link rel="apple-touch-icon" sizes="256x256" href="@IExecutionContext.Current.GetLink("/assets/images/icon-256x256.png")">
    <link rel="apple-touch-icon" sizes="384x384" href="@IExecutionContext.Current.GetLink("/assets/images/icon-384x384.png")">
    <link rel="apple-touch-icon" sizes="512x512" href="@IExecutionContext.Current.GetLink("/assets/images/icon-512x512.png")">
    <link rel="sitemap" type="application/xml" href="/sitemap.xml">
    <link rel="canonical" href="@ViewBag.Canonical" />
</head>

<body>
    <partial name="_Header" />
    <main>
        @RenderBody()
    </main>
    <partial name="_Footer" />
</body>

</html>